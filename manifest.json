{
	"manifest_version": 2,
	"name": "__MSG_name__",
	"version": "1.3",

	"description": "__MSG_description__",

	"author": "Dr. Off",

	"homepage_url": "https://github.com/dr-off/ao3-enhancement-suite",

	"default_locale": "en",

	"icons": 
	{
		"48": "icons/logo_48.png",
		"96": "icons/logo_96.png"
	},

	"options_ui":
	{
		"browser_style": true,
		"chrome_style": true,
		"open_in_tab": false,
		"page": "pages/settings.html"
	},

	"browser_action":
	{
		"browser_style": true,
		"default_popup": "pages/settings.html",
		"default_icon":
		{
			"16": "icons/logo_16.png",
			"32": "icons/logo_32.png"
		}
	},

	"content_scripts": 
	[
		{
			"matches":
			[
				"*://*.archiveofourown.org/*"
			],
			"css":
			[
				"css/global.css"
			],
			"js":
			[
				"js/polyfills/browser-polyfill.min.js",

				"js/classes/ControlSet.js",
				"js/classes/HelpButton.js",
				"js/classes/Modal.js",
				"js/classes/NavDropdown.js",
				"js/classes/Setting.js",

				"js/globals.js",
				
				"js/settings.js",
				"js/nav-settings.js",

				"js/features/tag-collapse.js",
				"js/features/work-stats.js"
			]
		},
		{
			"matches": 
			[
				"*://*.archiveofourown.org/works/*"
			],
			"css":
			[
				"css/features/comment-box.css"
			],
			"js": 
			[
				"js/features/comment-box.js"
			]
		},
		{
			"matches": 
			[
				"*://*.archiveofourown.org/works/search*"
			],
			"js": 
			[
				"js/features/search-presets.js"
			]
		}
	],

	"permissions":
	[
		"storage",
		"unlimitedStorage"
	]
}