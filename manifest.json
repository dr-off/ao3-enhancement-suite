{
	"manifest_version": 2,
	"name": "AO3 Enhancement Suite",
	"version": "1.1",

	"description": "An extension that aims to improve upon the already great experience on AO3 by adding various additional features.",

	"author": "Dr. Off",

	"homepage_url": "https://github.com/dr-off/ao3-enhancement-suite",

	"icons": 
	{
		"48": "icons/logo_48.png",
		"96": "icons/logo_96.png"
	},

	"options_ui":
	{
		"browser_style": true,
		"chrome_style": true,
		"open_in_tab": false,
		"page": "pages/settings.html"
	},

	"browser_action":
	{
		"browser_style": true,
		"default_popup": "pages/settings.html",
		"default_icon":
		{
			"16": "icons/logo_48.png",
			"32": "icons/logo_48.png"
		}
	},

	"content_scripts": 
	[
		{
			"matches":
			[
				"*://*.archiveofourown.org/*"
			],
			"css":
			[
				"css/global.css"
			],
			"js":
			[
				"js/polyfills/browser-polyfill.min.js",
				
				"js/classes/Setting.js",

				"js/settings.js",
				"js/features/average-words-per-chapter-stat.js",
				"js/features/tag-collapse.js"
			]
		},
		{
			"matches": 
			[
				"*://*.archiveofourown.org/works/search*"
			],
			"js": 
			[
				"js/features/search-presets.js"
			]
		}
	],

	"permissions":
	[
		"storage",
		"unlimitedStorage"
	]
}